﻿
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row align-items-center mb-3">
    <div class="col-lg-6">
        <h2 style="font-weight: bold; color: #000000;">Gestión de mobiliario</h2>
    </div>
    <div class="col-lg-6 text-end">
        <a class="btn shadow-sm custom-btn-servicios" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i> Crear nuevo mobiliario </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-white shadow-sm">

    <table id="tblDatos" class="table table-hover align-middle">
        <thead style="background-color: #e9ecef;" class="text-center">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Dimensiones</th>
                <th>Inventario</th>
                <th>Precio</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

<div class="row mt-3">
    <div class="col-lg-6  ms-auto text-end">
        <a class="btn shadow-sm btn-regresar" href="/Admin/ServicioAdicional/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/mobiliario.js"></script>
}