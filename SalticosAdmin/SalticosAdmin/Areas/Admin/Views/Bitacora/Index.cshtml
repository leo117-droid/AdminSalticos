﻿@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <h2 class="text-prim">Lista de Registros de Bitacora</h2>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-lg-3">
            <label for="fechaInicio" class="form-label">Fecha de Inicio</label>
            <input type="date" id="fechaInicio" class="form-control" />
        </div>
        <div class="col-lg-3">
            <label for="fechaFin" class="form-label">Fecha de Fin</label>
            <input type="date" id="fechaFin" class="form-control" />
        </div>
        <div class="col-lg-6 d-flex align-items-end">
            <button id="btnBuscar" class="btn shadow-sm custom-btn-otros">
                <i class="bi bi-search"></i> Filtrar
            </button>
            <button type="button" class="btn shadow-sm btn-regresar" id="btnLimpiarFiltro">
                <i class="bi bi-arrow-counterclockwise"></i> Limpiar Filtro
            </button>
        </div>
    </div>

    <br />

    <div class="p-4 border rounded bg-white shadow-sm">
        <table id="tblDatos" class="table table-hover align-middle">
            <thead style="background-color: #e9ecef;" class="text-center">
                <tr>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>Accion</th>
                    <th>Usuario</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<br />
<br />

<div class="row mt-3">
    <div class="col-lg-6 ms-auto text-end">
        <a class="btn shadow-sm btn-regresar" href="/Admin/Bitacora/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/bitacora.js"></script>
}