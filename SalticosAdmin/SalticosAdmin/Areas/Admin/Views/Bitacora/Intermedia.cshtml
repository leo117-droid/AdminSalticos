@{
    ViewData["Title"] = "Bitacora";
}

<header class="my-4 text-center">
    <h1 class="fw-bold">Gestión de Funcionalidades Adicionales</h1>
</header>


<section>
    <div class="container my-4 text-center">
        <div class="row justify-content-center">
            <!-- Botón Bitácora -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Bitacora" asp-action="Index">
                    <i class="bi bi-clipboard-data"></i> Bitácora
                </a>
            </div>

            <!-- Botón Contactos -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Contacto" asp-action="Index">
                    <i class="bi bi-person-lines-fill"></i> Contactos
                </a>
            </div>

            <!-- Botón Herramientas -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Herramienta" asp-action="Index">
                    <i class="bi bi-tools"></i> Herramientas
                </a>
            </div>

            <!-- Botón Proveedores -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Proveedor" asp-action="Index">
                    <i class="bi bi-box-seam"></i> Proveedores
                </a>
            </div>

            <!-- Botón Seguros -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Seguro" asp-action="Index">
                    <i class="bi bi-shield-check"></i> Seguros
                </a>
            </div>

            <!-- Botón Usuarios -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Usuario" asp-action="Index">
                    <i class="bi bi-people-fill"></i> Usuarios
                </a>
            </div>
        </div>
    </div>
</section>

