@{
    ViewData["Title"] = "Personal";
}

<header class="my-4 text-center">
    <h1 class="fw-bold">Gestión de Personal</h1>
</header>


<section>
    <div class="container my-4 text-center">
        <div class="row justify-content-center">
            <!-- Botón Personal -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Personal" asp-action="Index">
                    <i class="bi bi-person-badge"></i> Personal
                </a>
            </div>

            <!-- Botón RolPersonal -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="RolPersonal" asp-action="Index">
                    <i class="bi bi-journal"></i> Roles de Personal
                </a>
            </div>

            <!-- Botón Capacitaciones -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Capacitacion" asp-action="Index">
                    <i class="bi bi-journal"></i> Capacitaciones
                </a>
            </div>
        </div>
    </div>
</section>
