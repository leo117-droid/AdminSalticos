@{
    ViewData["Title"] = "Personal";
}

<header class="my-4 text-center">
    <h1 class="fw-bold">Gestión de personal</h1>
</header>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-personal">
                    <div class="card-body">
                        <i class="bi bi-people-fill display-1"></i>
                        <h5 class="card-title mt-3">Personal</h5>
                        <p class="card-text">Accede al módulo para crear, editar, actualizar y eliminar información sobre el personal.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Personal" asp-action="Index">Ir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-personal">
                    <div class="card-body">
                        <i class="bi bi-person-gear display-1"></i>
                        <h5 class="card-title mt-3">Roles de Personal</h5>
                        <p class="card-text">Accede al módulo para crear, editar, actualizar y eliminar información sobre roles de personal.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="RolPersonal" asp-action="Index">Ir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-personal">
                    <div class="card-body">
                        <i class="bi bi-mortarboard display-1"></i>
                        <h5 class="card-title mt-3">Capacitaciones</h5>
                        <p class="card-text">Accede al módulo para crear, editar, actualizar y eliminar información de capacitaciones.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Capacitacion" asp-action="Index">Ir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row mt-3">
    <div class="col-lg-6 ms-auto text-end">
        <a class="btn shadow-sm btn-regresar" href="/">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>