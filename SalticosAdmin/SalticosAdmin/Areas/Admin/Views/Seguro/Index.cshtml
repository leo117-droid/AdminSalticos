﻿
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class "col-lg-6">
        <h2 class="text-primary">Lista de Seguros</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i> Crear Nuevo Seguro </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">

    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Tipo Seguro</th>
                <th>Nombre Aseguradora</th>
                <th>Numero Poliza</th>
                <th>Fecha Inicio</th>
                <th>Fecha Vencimiento</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

<div class="row mt-3">
    <div class="col-lg-6">
        <a class="btn btn-success" href="/Admin/Bitacora/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/seguro.js"></script>
}