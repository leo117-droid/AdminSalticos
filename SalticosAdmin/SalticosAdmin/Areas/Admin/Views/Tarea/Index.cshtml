@{
    ViewData["Title"] = "Lista de Tareas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row align-items-center mb-4">
        <div class="col-lg-6">
            <h2 style="font-weight: bold; color: #000000;">Lista de tareas</h2>
        </div>
        <div class="col-lg-6 text-end">
            <a class="btn shadow-sm custom-btn-tarea" asp-action="Upsert">
                <i class="bi bi-plus-square-fill"></i> Crear nueva tarea
            </a>
        </div>
    </div>

    <div id="task-list" class="row gy-3">
        <!-- Aquí se cargarán las tareas como tarjetas -->
    </div>
</div>

@section Scripts {
    <script src="~/js/tarea.js"></script>
}