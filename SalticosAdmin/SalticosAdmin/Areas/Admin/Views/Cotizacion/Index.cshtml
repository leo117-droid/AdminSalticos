@model IEnumerable<SalticosAdmin.Modelos.Inflable>

<h2>Calculadora de Inflables</h2>
<form asp-action="GenerarCotizacion" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Seleccionar</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inflable in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="inflableIds" value="@inflable.Id" />
                    </td>
                    <td>@inflable.Nombre</td>
                    <td>@inflable.Descripcion</td>
                    <td>@inflable.Precio</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Calcular Cotización</button>
</form>
