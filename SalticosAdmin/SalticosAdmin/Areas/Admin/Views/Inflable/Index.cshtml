@model SalticosAdmin.Modelos.ViewModels.InflableVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row align-items-center mb-3">
    <div class="col-lg-6">
        <h2 style="font-weight: bold; color: #000000;">Gestión de inflables</h2>
    </div>
    <div class="col-lg-6 text-end">
        <a class="btn shadow-sm custom-btn-servicios" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i> Crear nuevo inflable </a>
    </div>


    <form id="formFiltrar" method="get" class="mt-4" action="@Url.Action("Index", "Inflable")">
        <div class="row g-3 align-items-end">
            <!-- Categoría por Tamaño -->
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label for="categoriaTamannoSelect">Categoría por tamaño</label>
                    <select asp-for="Inflable.CategoriaTamannoId" id="categoriaTamannoSelect" name="categoriaTamannoId" asp-items="@Model.CategoriaTamannoLista" class="form-select">
                        <option disabled selected> -- Seleccione una categoría de tamaño -- </option>
                    </select>
                </div>
            </div>

            <!-- Categoría por Edad -->
            <div class="col-lg-4 col-md-6">
                <div class="form-group">
                    <label for="categoriaEdadSelect">Categoría por edad</label>
                    <select asp-for="Inflable.CategoriaEdadId" id="categoriaEdadSelect" name="categoriaEdadId" asp-items="@Model.CategoriaEdadLista" class="form-select">
                        <option disabled selected> -- Seleccione una categoría de edad -- </option>
                    </select>
                </div>
            </div>

            <!-- Botón Buscar -->
            <div class="col-lg-2 col-md-3">
                <button type="button" class="btn shadow-sm custom-btn-servicios-inverso w-100" onclick="refreshDataTable()">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>

            <!-- Botón Limpiar -->
            <div class="col-lg-2 col-md-3">
                <button type="button" class="btn shadow-sm btn-regresar w-100" onclick="clearDataTable()">
                    <i class="bi bi-arrow-counterclockwise"></i> Limpiar
                </button>
            </div>
        </div>
    </form>


</div>

<br />

<div class="p-4 border rounded bg-white shadow-sm">

    <table id="tblDatos" class="table table-hover align-middle">
        <thead style="background-color: #e9ecef;" class="text-center">
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Dimensiones</th>
                <th>Estado</th>
                <th>Precio</th>
                <th>Precio hora adicional</th>
                <th>Categoría tamaño</th>
                <th>Categoría edad</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

<div class="row mt-3">
    <div class="col-lg-6 ms-auto text-end">
        <a class="btn shadow-sm btn-regresar" href="/Admin/Inflable/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/inflable.js"></script>
}