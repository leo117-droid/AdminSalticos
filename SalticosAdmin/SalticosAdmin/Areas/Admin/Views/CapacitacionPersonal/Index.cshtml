@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-4">
    <div class="col-lg-6">
        <h2 style="font-weight: bold; color: #000000;">Personal asignado a capacitación</h2>
    </div>
    <div class="col-lg-6 text-end">
        <a class="btn shadow-sm custom-btn-personal" asp-action="Upsert" asp-route-capacitacionID="@ViewData["Id"]">
            <i class="bi bi-plus-square-fill"></i> Agregar nuevo personal
        </a>
    </div>
</div>

<div class="p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Cédula</th>
                <th></th>
            </tr>
        </thead>
    </table>

    <div class="row mt-3">
        <div class="col-lg-6 ms-auto text-end">
            <a class="btn shadow-sm btn-regresar" href="/Admin/Capacitacion">
                <i class="bi bi-arrow-return-left"></i> Regresar
            </a>
        </div>
    </div>


</div>

@section Scripts {
    <script src="~/js/capacitacionpersonal.js"></script>
}
