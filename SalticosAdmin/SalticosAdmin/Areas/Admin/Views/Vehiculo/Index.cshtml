﻿
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 style="font-weight: bold; color: #000000;">Gestión de Vehículos</h2>
    </div>
    <div class="col-lg-6 text-end">
        <a class="btn shadow-sm custom-btn-transporte" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i> Crear Nuevo Vehículo </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">

    <table id="tblDatos" class="table table-responsive table-hover">
        <thead style="background-color: #e9ecef;" class="text-center">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Placa</th>
                <th>Tipo de vehiculo</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

<div class="row mt-3">
    <div class="col-lg-6 ms-auto text-end">
        <a class="btn shadow-sm btn-regresar" href="/Admin/Vehiculo/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/vehiculo.js"></script>
}