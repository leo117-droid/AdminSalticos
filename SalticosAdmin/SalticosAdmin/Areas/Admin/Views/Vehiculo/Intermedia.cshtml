@{
    ViewData["Title"] = "Vehiculo";
}

<header class="my-4 text-center">
    <h1 class="fw-bold">Gestión de Transporte</h1>
</header>


<section>
    <div class="container my-4 text-center">
        <div class="row justify-content-center">
            <!-- Botón Vehiculo -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Vehiculo" asp-action="Index">
                    <i class="bi bi-car-front-fill"></i> Vehiculo
                </a>
            </div>
            <!-- Botón Transporte -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="TarifasTransporte" asp-action="Index">
                    <i class="bi bi-cash-coin"></i> Tarifas Transporte
                </a>
            </div>
        </div>
    </div>
</section>
