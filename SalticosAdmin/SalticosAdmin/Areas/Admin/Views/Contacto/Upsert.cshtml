@model SalticosAdmin.Modelos.Contacto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear contacto";

}

<form method="post">
    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem;">

        <div class="row border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        </div>

        @if (Model.Id != 0)
        { // Actualizar
            titulo = "Actualizar contacto";
            <input type="hidden" asp-for="Id" id="id" />
        }

        <div class="col-12 border-bottom p-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <h2 style="font-weight: bold; color: #000000;">@titulo</h2>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre del contacto" id="nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Apellido</label>
                <input type="text" asp-for="Apellido" class="form-control" placeholder="Apellido del contacto" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
        </div>


        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Tipo servicio</label>
                <input type="text" asp-for="TipoServicio" class="form-control" placeholder="Tipo de Servicio del contacto" />
                <span asp-validation-for="TipoServicio" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Dirección</label>
                <input type="text" asp-for="Direccion" class="form-control" placeholder="Direccion del contacto" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Teléfono</label>
                <input type="text" asp-for="Telefono" class="form-control" placeholder="Telefono del contacto" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
        </div>


        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label>Correo</label>
                <input type="text" asp-for="Correo" class="form-control" placeholder="Correo del contacto" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
        </div>



        <br />

        <div>

            @if (Model.Id != 0)
            {
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="custom-btn-otros-inverso btn btn-primary" onfocus="false" asp-route-id="@Model">
                        <i class="bi bi-pencil-square"></i> Guardar Cambios
                    </button>
                    <a class="btn shadow-sm btn-regresar btn-md" href="/Admin/Contacto/Index">
                        <i class="bi bi-arrow-return-left"></i> Regresar
                    </a>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-start gap-2 mt-3">
                    <button type="submit" class="custom-btn-otros-inverso btn btn-primary" onfocus="false">
                        <i class="bi bi-plus-square-fill"></i> Crear
                    </button>
                    <a class="btn shadow-sm btn-regresar btn-md" href="/Admin/Contacto/Index">
                        <i class="bi bi-arrow-return-left"></i> Regresar
                    </a>
                </div>
            }

        </div>


    </div>


</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

   
}