@{
    ViewData["Title"] = "Alimentación";
}

<header class="my-4 text-center">
    <h1 class="fw-bold">Gestión de alimentación</h1>
</header>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-servicios">
                    <div class="card-body">
                        <i class="bi bi-basket2 display-1"></i>
                        <h5 class="card-title mt-3">Alimentación</h5>
                        <p class="card-text">Accede al módulo para crear, editar, actualizar y eliminar información sobre la alimentación.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Alimentacion" asp-action="Index">Ir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-servicios">
                    <div class="card-body">
                        <i class="bi bi-basket2 display-1"></i>
                        <h5 class="card-title mt-3">Ingredientes</h5>
                        <p class="card-text">Accede al módulo para crear, editar, actualizar y eliminar información sobre los ingredientes.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Ingrediente" asp-action="Index">Ir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="row mt-3">
    <div class="col-lg-6 ms-auto text-end">
        <a class="btn shadow-sm btn-regresar" href="/Admin/ServicioAdicional/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>