@{
    ViewData["Title"] = "Alimentación";
}

<header class="my-4 text-center">
    <h1 class="fw-bold">Gestión de Alimentación</h1>
</header>


<section>
    <div class="container my-4 text-center">
        <div class="row justify-content-center">
            <!-- Botón Alimentacion -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Alimentacion" asp-action="Index">
                    <i class="bi bi-person-badge"></i> Alimentación
                </a>
            </div>

            <!-- Botón Ingredientes -->
            <div class="col-md-4 mb-3">
                <a class="btn btn-primary btn-lg w-100" asp-area="Admin" asp-controller="Ingrediente" asp-action="Index">
                    <i class="bi bi-journal"></i> Ingredientes
                </a>
            </div>


        </div>
    </div>
</section>
