@model SalticosAdmin.Modelos.Alimentacion
@using SalticosAdmin.Utilidades
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Nuevo producto de Alimentacion";
}

<form method="post" id="formAlimentacion" enctype="multipart/form-data">

    @if (Model.Id != 0)
    {
        titulo = "Editar Alimentacion";
        <input asp-for="Id" hidden />
        <input asp-for="ImageUrl" hidden />
    }

    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <h2 style="font-weight: bold; color: #000000;">@titulo</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Nombre</label>
                            <input asp-for="Nombre" class="form-control" id="nombre"/>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Descripcion</label>
                            <input asp-for="Descripcion" class="form-control" />
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <label>Imagen</label>
                            <input type="file" accept="image/png, image/gif, image/jpeg" name="files" id="imagenId" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label>Precio</label>
                            <div class="input-group">
                                <span class="input-group-text">₡</span>
                                <input asp-for="Precio" class="form-control" type="number" />
                            </div>
                        </div>
                    </div>

                    <br />

                    <div class="d-grid gap-2 d-md-block">
                        @if (Model.Id != 0)
                        {
                            <div class="d-grid gap-2 d-md-block">
                                <button type="submit" class="custom-btn-servicios btn btn-primary" onfocus="false" asp-route-id="@Model">
                                    <i class="bi bi-pencil-square"></i> Guardar Cambios
                                </button>

                                <div class="row mt-3">
                                    <div class="col-lg-6 ms-auto text-end">
                                        <a class="btn shadow-sm btn-regresar btn-md" href="/Admin/Alimentacion/Index">
                                            <i class="bi bi-arrow-return-left"></i> Regresar
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <button type="submit" onclick="return validarImagen()" class="custom-btn-servicios btn btn-success">
                                <i class="bi bi-plus-square-fill"></i> Crear
                            </button>
                            <div class="mt-3 d-flex justify-content-end">
                                <a class="btn shadow-sm btn-regresar btn-md" href="/Admin/Alimentacion/Index">
                                    <i class="bi bi-arrow-return-left"></i> Regresar
                                </a>
                            </div>
                        }
                    </div>




                </div>
            </div>

            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@DS.ImagenRutaAlimentacion@Model.ImageUrl" width="100%" style="border-radius:5px; border:1px solid #bbb" />
                }
            </div>


        </div>


    </div>


</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        function validarImagen() {
            if (document.getElementById("imagenId").value == "") {
                swal("Error", "Seleccione una Imagen", "error")
                return false;
            }
            return true;
        }

    </script>
}

