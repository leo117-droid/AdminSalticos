﻿@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class "col-lg-6">
        <h2 class="text-primary">Lista de Eventos</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="Upsert"> <i class="bi bi-plus-square-fill"></i> Crear Nuevo Evento </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">

    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Hora Inicio</th>
                <th>Hora Fin</th>
                <th>Direccion</th>
                <th>Provincia</th>
                <th>Cliente</th>

                <th></th>
            </tr>
        </thead>
    </table>

</div>

<div class="row mt-3">
    <div class="col-lg-6">
        <a class="btn btn-success" href="/Admin/Evento/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/evento.js"></script>
}