﻿
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 style="font-weight: bold; color: #000000;">Gestión de capacitaciones</h2>
    </div>
    <div class="col-lg-6 text-end">
        <a class="btn shadow-sm custom-btn-personal" asp-action="Upsert">
            <i class="bi bi-plus-square-fill"></i> Crear nueva capacitacion
        </a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-hover align-middle">
        <thead style="background-color: #e9ecef;" class="text-center">
            <tr>
                <th>Fecha</th>
                <th>Tema</th>
                <th>Duración</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


<div class="row mt-3">
    <div class="col-lg-6 ms-auto text-end">
        <a class="btn shadow-sm btn-regresar" href="/Admin/Personal/Intermedia">
            <i class="bi bi-arrow-return-left"></i> Regresar
        </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/capacitacion.js"></script>
}