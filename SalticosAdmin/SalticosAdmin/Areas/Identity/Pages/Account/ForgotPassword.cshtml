@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-6">
            <div class="card border-0 shadow-lg">
                <!-- Elimino la clase "rounded-4" -->
                <div class="card-header bg-transparent text-center">
                    <h4 class="mb-3 text-dark"><i class="bi bi-key-fill me-2"></i>¿Olvidaste tu contraseña?</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center mb-4">Ingresa tu correo electrónico para restablecer tu contraseña</h5>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-dark btn-lg">
                            <!-- Elimino la clase "rounded-3" -->
                            <i class="bi bi-arrow-repeat me-2"></i>Reestablecer Contraseña
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center bg-transparent">
                    <a class="btn btn-outline-dark w-100" href="/Identity/Account/Login">
                        <i class="bi bi-arrow-return-left me-2"></i> Regresar a iniciar sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        /* Elimino el border-radius para quitar los bordes redondeados */
    }

    .card-header {
        border-bottom: none;
    }

    .card-body {
        background-color: #f8f9fa;
    }

    .btn-dark {
        background-color: #000;
        border-color: #000;
    }

        .btn-dark:hover {
            background-color: #6c757d;
            border-color: #6c757d;
        }

    .btn-outline-dark {
        border-color: #000;
        color: #000;
    }

        .btn-outline-dark:hover {
            background-color: #000;
            color: white;
            border-color: #000;
        }

    .form-floating input:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .card-footer a {
        text-decoration: none;
    }

    .shadow-lg {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .bi {
        font-size: 1.2rem;
    }
</style>
