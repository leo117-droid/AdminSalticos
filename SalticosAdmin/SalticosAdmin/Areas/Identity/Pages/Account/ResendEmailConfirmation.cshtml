@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmación de correo electrónico";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-6">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-transparent text-center">
                    <h4 class="mb-0"><i class="bi bi-envelope-paper-fill me-2"></i>Reenviar confirmación de correo electrónico</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center mb-4">Ingrese su correo electrónico para reenviar la confirmación</h5>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-dark btn-lg">
                            <i class="bi bi-arrow-repeat me-2"></i>Reenviar Confirmación
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <a href="/Identity/Account/Login" class="btn btn-outline-dark w-100">
                        <i class="bi bi-arrow-left-circle-fill me-2"></i> Regresar al inicio de sesión
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card-body {
        background-color: white;
    }
    .card-header {
        font-size: 1.25rem;
        font-weight: bold;
        border-bottom: 2px solid #d3d3d3; /* Gris claro */
    }

    .btn-dark {
        background-color: #000;
        border-color: #000;
    }

        .btn-dark:hover {
            background-color: #6c757d;
            border-color: #6c757d;
        }

    .btn-outline-dark {
        border-color: #000;
        color: #000;
    }

        .btn-outline-dark:hover {
            background-color: #000;
            color: #fff;
            border-color: #000;
        }

    .form-floating input:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .bi {
        font-size: 1.2rem;
    }
</style>
