@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-5">
            <!-- Aumenté el tamaño del contenedor -->
            <section class="login-card shadow-lg rounded-4 p-5">
                <!-- Icono centrado -->
                <div class="text-center mb-4">
                    <div class="icon-container">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <h2 class="fw-bold text-black">Iniciar sesión</h2>
                    <p class="text-muted">Usa tu cuenta para acceder a la plataforma.</p>
                </div>
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Correo Electrónico -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" type="password" />
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Recordar sesión -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe">Recordarme</label>
                    </div>

                    <!-- Botón de inicio de sesión -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-dark btn-lg">Iniciar sesión</button>
                    </div>

                    <!-- Enlaces adicionales -->
                    <div class="text-center">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación de correo</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>

    .icon-container {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 80px;
        height: 80px;
        margin: 0 auto 15px auto;
        border: 3px solid #000;
        border-radius: 50%;
        color: #000;
    }

        .icon-container .bi {
            font-size: 2.5rem; /* Tamaño del icono */
        }


    /* Fondo del formulario */
    .login-card {
        background-color: #ffffff;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        height: auto; /* Se asegura de que el cuadro tenga una altura automática */
    }

    /* Estilo de los botones */
    .btn-dark {
        background-color: black;
        border-color: #343a40;
        transition: background-color 0.3s ease;
    }

        .btn-dark:hover {
            background-color: #343a40;
            border-color: #343a40;
        }

    /* Estilo de los campos de entrada */
    .form-floating .form-control {
        border-radius: 0.5rem;
        border: 1px solid #d1d1d1;
        box-shadow: none;
    }

    .form-control:focus {
        border-color: #343a40;
        box-shadow: 0 0 5px rgba(52, 58, 64, 0.5);
    }

    .form-label {
        font-weight: 600;
    }

    .form-check-label {
        font-weight: 500;
    }

    /* Espaciado y ajuste de texto */
    .text-center a {
        color: #19c2ff;
        text-decoration: none;
    }

        .text-center a:hover {
            text-decoration: underline;
        }

    /* Ajustes generales */
    .mb-3 {
        margin-bottom: 1.5rem;
    }

    .d-grid {
        display: grid;
    }
</style>
