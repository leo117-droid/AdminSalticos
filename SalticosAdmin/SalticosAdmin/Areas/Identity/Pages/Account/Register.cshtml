@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header custom-header text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Registrar nuevo usuario</h4>
                </div>


                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <!-- Nombre -->
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-light" style="color: #19c2ff;" class="rounded-start"><i class="bi bi-person-fill"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.Nombre" class="form-control rounded-end" placeholder="Nombre" />
                                <label asp-for="Input.Nombre">Nombre</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Nombre" class="text-danger small"></span>

                        <!-- Apellido -->
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-light" style="color: #19c2ff;" class="rounded-start"><i class="bi bi-person-lines-fill"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.Apellido" class="form-control rounded-end" placeholder="Apellido" />
                                <label asp-for="Input.Apellido">Apellido</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Apellido" class="text-danger small"></span>

                        <!-- Email -->
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-light" style="color: #19c2ff;" class="rounded-start"><i class="bi bi-envelope-fill"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.Email" class="form-control rounded-end" autocomplete="email" placeholder="Correo electrónico" />
                                <label asp-for="Input.Email">Correo electrónico</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>

                        <!-- Contraseña -->
                        <div class="input-group mb-3">
                            <span class="input-group-text bg-light" style="color: #19c2ff;" class="rounded-start"><i class="bi bi-lock-fill"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.Password" type="password" class="form-control rounded-end" autocomplete="new-password" placeholder="Contraseña" />
                                <label asp-for="Input.Password">Contraseña</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>

                        <!-- Confirmar Contraseña -->
                        <div class="input-group mb-4">
                            <span class="input-group-text bg-light" style="color: #19c2ff;" class="rounded-start"><i class="bi bi-lock-fill"></i></span>
                            <div class="form-floating flex-grow-1">
                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control rounded-end" autocomplete="new-password" placeholder="Confirmar contraseña" />
                                <label asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>

                        <!-- Botón de registro -->
                        <button id="registerSubmit" type="submit" class="btn btn-dark w-100 btn-lg rounded-3">
                            <i class="bi bi-check-circle me-2"></i>Registrar
                        </button>

                    </form>
                </div>
            </div>

            <!-- Botón de regresar -->
            <div class="text-center mt-3">
                <a class="btn btn-outline-dark" href="/Admin/Usuario/Index">
                    <i class="bi bi-arrow-return-left me-1"></i> Regresar
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .custom-header {
        background-color: #000000; /* Fondo negro */
        color: white; /* Texto blanco */
    }

    /* Botón negro */
    .btn-dark {
        background-color: black;
        border-color: black;
        transition: all 0.3s ease;
    }

        /* Hover gris */
        .btn-dark:hover {
            background-color: #343a40; /* Gris claro */
            border-color: #343a40; /* Gris claro */
        }

    .rounded-4 {
        border-radius: 1rem;
    }

    .rounded-top-4 {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .rounded-pill {
        border-radius: 50px;
    }

    .small {
        font-size: 0.85rem;
    }

    .shadow-sm {
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>
