@model IEnumerable<SalticosAdmin.Modelos.Inflable>
@using SalticosAdmin.Utilidades

@{
    ViewData["Title"] = "Home Page";
}

<!-- HTML -->
<div class="full-width-image">
    <img src="~/imagenes/UI/banner1.png" alt="Imagen decorativa" class="img-banner">
</div>



<section>
    <!-- Barra de búsqueda -->
    <div class="col-lg-6 col-md-6 col-sm-6 d-flex mt-4">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Buscar..." aria-label="Buscar" aria-describedby="button-addon2" />
            <button class="btn btn-outline-primary">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center border-primary shadow">
                    <div class="card-body">
                        <i class="bi bi-calendar-event display-1 text-primary"></i>
                        <h5 class="card-title mt-3">Evento</h5>
                        <p class="card-text">Gestiona y organiza todos los eventos importantes.</p>
                        <a href="#" class="btn btn-primary">Ir</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center border-success shadow">
                    <div class="card-body">
                        <i class="bi bi-people-fill display-1 text-success"></i>
                        <h5 class="card-title mt-3">Personal</h5>
                        <p class="card-text">Administra tu equipo de trabajo eficientemente.</p>
                        <a href="#" class="btn btn-success">Ir</a>
                    </div>
                </div>
            </div>
            <!-- Repite para otros botones -->
        </div>
    </div>
</section>
