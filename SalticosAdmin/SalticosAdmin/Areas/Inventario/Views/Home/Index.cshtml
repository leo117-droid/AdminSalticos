@model IEnumerable<SalticosAdmin.Modelos.Inflable>
@using SalticosAdmin.Utilidades

@{
    ViewData["Title"] = "Home Page";
}

<!-- HTML -->
<div class="full-width-image">
    <img src="~/imagenes/UI/banner1.png" alt="Imagen decorativa" class="img-banner">
</div>



<section>
    <!-- Barra de búsqueda -->
    <div class="col-lg-6 col-md-6 col-sm-6 d-flex mt-4">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Buscar..." aria-label="Buscar" aria-describedby="button-addon2" />
            <button class="btn btn-outline-primary">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>
</section>


<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-evento">
                    <div class="card-body">
                        <i class="bi bi-calendar-event display-1"></i> <!-- Icono con color cambiado por CSS -->
                        <h5 class="card-title mt-3">Evento</h5>
                        <p class="card-text">Gestiona y organiza todos los eventos importantes.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Evento" asp-action="Intermedia">Ir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-personal">
                    <div class="card-body">
                        <i class="bi bi-people-fill display-1"></i>
                        <h5 class="card-title mt-3">Personal</h5>
                        <p class="card-text">Administra eficientemente al personal, incluyendo roles y capacitaciones.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Personal" asp-action="Intermedia">Ir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-servicios">
                    <div class="card-body">
                        <i class="bi bi-tools display-1"></i>
                        <h5 class="card-title mt-3">Servicios</h5>
                        <p class="card-text">Coordina y gestiona servicios adicionales que complementen los eventos.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="ServicioAdicional" asp-action="Intermedia">Ir</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-transporte">
                    <div class="card-body">
                        <i class="bi bi-car-front-fill display-1"></i>
                        <h5 class="card-title mt-3">Transporte</h5>
                        <p class="card-text">Organiza los vehículos y tarifas de transporte necesarios para garantizar la logística eficiente en los eventos.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Vehiculo" asp-action="Intermedia">Ir</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center border-primary shadow card-otros">
                    <div class="card-body">
                        <i class="bi bi-journal-text display-1"></i>
                        <h5 class="card-title mt-3">Otros</h5>
                        <p class="card-text">Registra y controla información adicional, para mantener todos los detalles organizados.</p>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Bitacora" asp-action="Intermedia">Ir</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



