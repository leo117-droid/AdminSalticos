<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalticosAdmin</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalticosAdmin.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

</head>
<body>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imagenes/UI/LOGO.jpeg" alt="Logo Salticos" style="height: 50px; vertical-align: middle;">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        @* Verifica si el usuario está autenticado antes de mostrar el dropdown *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                    Contenido
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Herramienta" asp-action="Index">Herramientas</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Cliente" asp-action="Index">Clientes</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Contacto" asp-action="Index">Contactos</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="TarifasTransporte" asp-action="Index">Tarifas Transporte</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Vehiculo" asp-action="Index">Vehiculos</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="CategoriasEdad" asp-action="Index">Categorías por Edad</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="CategoriaTamanno" asp-action="Index">Categorías por Tamaño</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="RolPersonal" asp-action="Index">Roles de Personal</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Ingrediente" asp-action="Index">Ingredientes</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Personal" asp-action="Index">Personal</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Inflable" asp-action="Index">Inflables</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Capacitacion" asp-action="Index">Capacitaciones</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="ServicioAdicional" asp-action="Index">ServiciosAdicionales</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Mobiliario" asp-action="Index">Mobiliarios</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Alimentacion" asp-action="Index">Alimentacion</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Bitacora" asp-action="Index">Bitacora</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Evento" asp-action="Index">Evento</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Usuario" asp-action="Index">Usuarios</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Tarea" asp-action="Index">Tareas</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Cotizacion" asp-action="Index">Cotización</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Informe" asp-action="Informe">Informes</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Proveedor" asp-action="Index">Proveedores</a></li>       
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Seguro" asp-action="Index">Seguros</a></li>


                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Cotizacion" asp-action="Index">
                                    <i class="bi bi-calculator"></i>
                                    Cotización
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Informe" asp-action="Index">
                                    <i class="bi bi-reception-4"></i>
                                    Informe
                                </a>
                            </li>

                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notificaciones" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SalticosAdmin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
